---
import '../styles/global.css';

const { content } = Astro.props;
const siteConfig = {
  title: 'LÃ¤r dig koda'
}
---
<html>
  <head>
    <!-- Add other Head elements here, like styles and meta tags. -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{content.title}</title>
  </head>
  <body>
    <header class="text-2xl">
      <a href="/">{ siteConfig.title }</a>
    </header>
    <side>
      <p>Sidebar</p>
    </side>
    <main>
      {content.type === 'post' ?
      <div class="mb-16">
        <h1 class="text-xl mb-2">{content.title}</h1>
        <h2 class="text-sm">{content.author} // {content.date}</h2>
      </div>
      :
      <h1 class="text-xl mb-16">{content.title}</h1>
      }
      <slot />
    </main>
  </body>
</html>